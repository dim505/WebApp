    <script>



        //on a window resize event, this function is exicuted
        window.onresize = function () {

            //checks to see if window width is 575 or less
            if (window.innerWidth < 575 || screen.width < 575) {

                //handles differently if IE or Edge
                if (isIE() || (isEdge > -1)) {
                    //optimizes drop down for screen size
                    $('.caret').css('border-top', '5px solid white')
                    $('.dropbtn').css('padding-left', '0px')
                    $('.dropbtn').css('padding-right', '0px')

                } else {
                    $('.caret').css('display', 'contents')
                    $('.dropbtn').css('padding-left', '0px')
                    $('.dropbtn').css('padding-right', '0px')
                }

                //checks to see if window width is between 575 and 767
            } else if ((window.innerWidth > 575 && window.innerWidth < 767)) {

                //optimizes drop down for screen size
                $('.caret').css('display', 'inline')
                $('.dropbtn').css('padding-top', '7px')
                $('.dropbtn').css('padding-left', '7px')
                $('.dropbtn').css('padding-bottom', '7px')
                $('.dropbtn').css('height', '35px')
                $('.dropbtn').css('padding-right', '16px')
                $('.caret').css('border-top', '5px solid black')





            } //checks to see if window width is 767 or higher
            else if (window.innerWidth > 767) {
                //optimizes drop down for screen size
                $('.caret').css('display', 'inline')
                $('.dropbtn').css('padding-top', '8px')
                $('.dropbtn').css('padding-left', '8px')
                $('.dropbtn').css('padding-bottom', '8px')
                $('.dropbtn').css('height', '37px')
                $('.dropbtn').css('padding-right', '16px')
                $('.caret').css('border-top', '5px solid black')

            }
        };


        // function checks if browser IE
        function isIE() {
            ua = navigator.userAgent;
            /* MSIE used to detect old browsers and Trident used to newer ones*/
            var is_ie = ua.indexOf("MSIE ") > -1 || ua.indexOf("Trident/") > -1;

            return is_ie;
        }


        // detects version of chrome
        var isChrome = navigator.userAgent.search("Chrome");

        // detects version of firefox
        var isFirefox = navigator.userAgent.search("Firefox");

        // detects version of Edge
        var isEdge = window.navigator.userAgent.indexOf("Edg")



        //gets the html path file path
        var path = window.location.pathname;
        //extracts only the page name
        var page = path.split("/").pop();

        //gets curr date in mm
        var CurrDate = new Date().getTime();

        //compares if user visited the website since the last session
        if (typeof sessionStorage.getItem("LastLoad") !== 'string') {

            //if no, it will set a time stamp of lasted visited
            sessionStorage.setItem("LastLoad", CurrDate)



        }

        // calulates diff from last visit time to current visit time
        var diff = ((CurrDate - sessionStorage.getItem("LastLoad")) / 1000) / 3600




        //if diff is greater than 1 hr or first time visiting load preloader
        if (diff > 1 || diff === 0) {

            //checks if firefox/chrome and not home page, undesired preloader bahavior in chrome and firefox browsers
            if ((isChrome > 0 && page !== "") || (isFirefox > 0 && page !== "")) {

                $(document).ready(function () {
                    //reduces preloader fade out time
                    $('.preloader').css('display', 'block').delay(1500).fadeOut(2000)
                    //fades body in
                    $('body').fadeIn(800);
                });

                //checks if diff is greater than 1
                if (diff > 1) {

                    //sets last visited time to a smaller number so the diff will be smaller. this wont cause the page to constantly show the preloader with each refresh
                    sessionStorage.setItem("LastLoad", CurrDate + 1000000)


                }
            } else {

                $(document).ready(function () {
                    //fades preloader out
                    $('.preloader').css('display', 'block').delay(4000).fadeOut(2000)
                    //fades body in
                    $('body').fadeIn(800);


                    //displays my alert div if user is using IE
                    if (isIE()) {

                        $('.IEAlert').css('display', 'block').delay(30000).fadeOut(1000)

                    }

                });




            }






        }


        $(document).ready(function () {



            //checks screensize on initial screen load
            if (screen.width < 575 || window.innerWidth < 575) {


                //checks if IE
                if (isIE()) {
                    //optimizes drop down
                    $('.caret').css('border-top', '5px solid white')
                    $('.dropbtn').css('padding-left', '0px')
                    $('.dropbtn').css('padding-right', '0px')

                } else {
                    $('.caret').css('display', 'contents')
                    $('.dropbtn').css('padding-left', '0px')
                    $('.dropbtn').css('padding-right', '0px')
                }



            }

            //checks screensize on initial screen load
            else if ((screen.width > 575 && screen.width < 767) || (window.innerWidth > 575 && window.innerWidth < 767)) {
                //optimizes drop down
                $('.caret').css('display', 'inline')
                $('.dropbtn').css('padding-top', '7px')
                $('.dropbtn').css('padding-left', '7px')
                $('.dropbtn').css('padding-bottom', '7px')
                $('.dropbtn').css('padding-right', '16px')
                $('.dropbtn').css('height', '35px')

                $('.caret').css('border-top', '5px solid black')
            }


            //checks screensize on initial screen load
            else if (screen.width > 767 || window.innerWidth > 767) {
                //optimizes drop down
                $('.caret').css('display', 'inline')
                $('.dropbtn').css('padding-top', '8px')
                $('.dropbtn').css('padding-left', '8px')
                $('.dropbtn').css('padding-bottom', '8px')
                $('.dropbtn').css('padding-right', '16px')
                $('.dropbtn').css('height', '37px')
                $('.caret').css('border-top', '5px solid black')
            }
            //checks to see if page is calculator. Do not want effect on server side calculator
            if (page !== "Calculator") {

                //Fades body in for all other pages
                //  $('body').css('display', 'none').fadeIn(800);
                $('body').fadeIn(800);
            } else {
                //displays body for C# calculator page (no fade)
                $('body').css('display', 'block')

            }

            //tags all images with lazy load classses
            $("img").addClass("progressive__img progressive--not-loaded");

            debugger



            var string

            //sets all imgs with data-progressive class with value fron the img src
            $("img").each(function () {

                $(this).attr('data-progressive', $(this).attr('src'))

                string = $(this).attr('src').substring(0, $(this).attr('src').length - 4) + "Min" + ($(this).attr('src').substring($(this).attr('src').length - 4, $(this).attr('src').length))

                if (($(this).attr('src').substring($(this).attr('src').length - 4, $(this).attr('src').length)) === ".gif") {


                    $(this).attr('src', "/AMSPic/GifMin.png")

                } else {
                    if ($(this).attr("id") === "video") {
                        return

                    } else {
                        $(this).attr('src', string)
                    }



                }




            })





        }










        );

        //

        //checks to see if the preloader is loading
        if (diff > 1 || diff === 0) {
            $(window).on('load', function () {

                //sets lazy load to go off after the preloader loads
                setTimeout(function () {
                    progressively.init()

                }, 5500);


            });
        } else {
            //sets the lazy load to happen immediately
            setTimeout(function () {
                progressively.init()

            }, 250);




        }


        $(document).ready(function () {

            //slide event that fires with every slide change
            $('#carouselExampleIndicators').bind('slide.bs.carousel', function (e) {

                //initizes lazy load for the new picture in the slide
                setTimeout(function () {
                    progressively.init()

                }, 1200);
            });

        });


        //Jquery pop over function targeting divs that have data toggle pop over set
        $(function () {
            $('[data-toggle="popover"]').popover()
        })



    </script>
